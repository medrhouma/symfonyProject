{% extends 'base.html.twig' %}

{% block body %}
<style>
    /* Container for the connexion form */
    .connexion-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Heading styling */
    .connexion-heading {
        font-size: 2rem;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1rem;
    }

    /* Form styling */
    .connexion-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Input styling */
    .connexion-form .form-control {
        border-radius: 0.3rem;
        border: 1px solid #ced4da;
        padding: 0.75rem;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .connexion-form .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    /* Button styling */
    .connexion-form .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 0.3rem;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
    }

    .connexion-form .btn-primary:hover {
        background-color: #2c82c9;
        border-color: #2c82c9;
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .connexion-container {
            margin: 1rem;
            padding: 1.5rem;
        }

        .connexion-heading {
            font-size: 1.75rem;
        }

        .connexion-form .form-control {
            font-size: 0.9rem;
            padding: 0.5rem;
        }

        .connexion-form .btn-primary {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }
    }
</style>

<div class="connexion-container">
    <h2 class="connexion-heading">Connexion</h2>
    <form class="connexion-form">
        <input type="email" placeholder="Email" class="form-control mb-2" />
        <input type="password" placeholder="Mot de passe" class="form-control mb-2" />
        <button type="submit" class="btn btn-primary">Se connecter</button>
    </form>
</div>
{% endblock %}