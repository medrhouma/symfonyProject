{% extends 'base.html.twig' %}

{% block body %}
<style>
    /* Container for the inscription form */
    .inscription-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Heading styling */
    .inscription-heading {
        font-size: 2rem;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1rem;
    }

    /* Form styling */
    .inscription-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Input styling */
    .inscription-form .form-control {
        border-radius: 0.3rem;
        border: 1px solid #ced4da;
        padding: 0.75rem;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .inscription-form .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    /* Button styling */
    .inscription-form .btn-success {
        background-color: #3498db;
        border-color: #3498db;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 0.3rem;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
    }

    .inscription-form .btn-success:hover {
        background-color: #2c82c9;
        border-color: #2c82c9;
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .inscription-container {
            margin: 1rem;
            padding: 1.5rem;
        }

        .inscription-heading {
            font-size: 1.75rem;
        }

        .inscription-form .form-control {
            font-size: 0.9rem;
            padding: 0.5rem;
        }

        .inscription-form .btn-success {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }
    }
</style>

<div class="inscription-container">
    <h2 class="inscription-heading">Inscription</h2>
    <form class="inscription-form">
        <input type="text" placeholder="Nom complet" class="form-control mb-2" />
        <input type="email" placeholder="Email" class="form-control mb-2" />
        <input type="password" placeholder="Mot de passe" class="form-control mb-2" />
        <button type="submit" class="btn btn-success">Sâ€™inscrire</button>
    </form>
</div>
{% endblock %}